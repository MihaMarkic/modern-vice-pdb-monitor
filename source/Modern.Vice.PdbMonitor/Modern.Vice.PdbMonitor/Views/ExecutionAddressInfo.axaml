<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c="clr-namespace:Modern.Vice.PdbMonitor.Converters"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Modern.Vice.PdbMonitor.Engine.ViewModels;assembly=Modern.Vice.PdbMonitor.Engine"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Name="control"
             x:Class="Modern.Vice.PdbMonitor.Views.ExecutionAddressInfo">
  <StackPanel Name="content" Orientation="Horizontal" IsVisible="{Binding #control.EffectiveVisibility}">
    <StackPanel.Resources>
      <c:HexValueConverter x:Key="HexValueConverter" />
    </StackPanel.Resources>
    <TextBlock Classes="pc_label" Text="PC:" Margin="0,0,2,0" />
    <TextBlock Classes="pc_value" Text="{Binding #control.ExecutionAddress, Converter={StaticResource HexValueConverter}}" />
  </StackPanel>
</UserControl>
