<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="clr-namespace:Modern.Vice.PdbMonitor.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Modern.Vice.PdbMonitor.Views.Registers">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <Grid.Styles>
      <Style Selector="v|Register">
        <Setter Property="Margin" Value="4" />
      </Style>
    </Grid.Styles>
    <v:Register Grid.Column="0" Caption="PC" Value="{Binding Current.PC}" />
    <v:Register Grid.Column="1" Caption="A" Value="{Binding Current.A}" />
    <v:Register Grid.Column="2" Caption="X" Value="{Binding Current.X}" />
    <v:Register Grid.Column="3" Caption="Y" Value="{Binding Current.Y}" />
  </Grid>
</UserControl>
